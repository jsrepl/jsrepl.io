{
  "semi": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "printWidth": 100,

  "importOrder": [
    "^node:",
    "^react",
    "^next",
    "<THIRD_PARTY_MODULES>",
    "^\\~icons/",
    "^\\@/",
    "^\\.\\./",
    "^\\./"
  ],
  "importOrderSortSpecifiers": true,

  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],

  "overrides": [
    {
      "files": ["*.md", "*.mdx"],
      "options": {
        "proseWrap": "always"
      }
    }
  ]
}
